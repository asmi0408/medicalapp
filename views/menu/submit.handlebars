<div class="card card-body">
  <h3>Submission of Medical Certificate</h3>
  {{#submitMedical}}
  <form action="/menu/submit/{{id}}" method="post" enctype="multipart/form-data">{{/submitMedical}}
    <div class="form-group">
      <div class="form-group">
        <label for="date">Date from</label>
        <input type="date" class="form-control" name="date" value="{{formatDate date 'DD-MMM-YYYY'}}" required>
      </div>
      <div class="form-group">
        <label for="date">Date to</label>
        <input type="date" class="form-control" name="dateto" value="{{formatDate date 'DD-MMM-YYYY'}}" required>
      </div>
      <div class="form-group">
        <div class="form-group">
          <label for="ClinicName">Clinic Name</label>
          {{#submitMedical}}
          <select type="text" class="form-control" id="clinic" name="clinic">
            <option value="{{clinic}}">{{clinic}}</option>
            {{/submitMedical}}
          </select>
        </div>
      </div>
      <div class="form-group">
        <div class="file-field input-field">
          <div class="btn grey">
          <input name="mcimage" type="file" required>
          </div>
          <div class="file-path-wrapper mb-3">
            <input class="file-path validate mb-3" type="text" hidden>
          </div>
        </div>
        <button type="submit" class="btn btn-primary mb-3" >Submit</button>
      </div>
  </form>
  </div>