{{#each errors}}
<div class="alert alert-danger">{{text}}</div>
{{else}} {{/each}}

<div class="card card-body">
  <h3>Request Time-off</h3>
  <form action="/menu" method="post">
    <div class="form-group">
      <div class="form-group">
        <label for="date">Date</label>
        <input type="date" class="form-control" name="date" required>
      </div>
      <div class="form-group">
        <div class="form-group">
          <label for="ClinicName">Clinic Name</label>
          <select type="text" class="form-control" id="clinic" name="clinic">
            {{#each medical}}
            <option value="{{clinic}}">{{clinic}}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="form-group">
        <div class="form-group">
          <label for="Departmentname">Department</label>
          {{#user}}<input class="form-control" type="text" id="Department" name="department" value="{{department}}"readonly>{{/user}}
          <small class="form-text text-muted font-italic">To change your department, go to your profile</small>
        </div>
      </div>
            <div class="form-group">
        <div class="form-group">
          <label for="SupervisorName">Supervisor Name</label>
          {{#users}}{{#supervisor}}<input class="form-control" type="text" id="{{id}}" name="supervisor2" value="{{name}}"readonly>
          <input type="hidden" name="supervisor" value="{{id}}">
          {{/supervisor}}{{/users}}
          <small class="form-text text-muted font-italic">To change your department, go to your profile</small>
        </div>
      </div>
      <div class="form-group">
        <div class="form-group">
          <label for="Task">Outstanding Tasks</label>
          <textarea class="form-control" name="task" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
  </form>
  </div>