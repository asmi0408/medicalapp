<div class="card card-body">
  <h3>Edit request Time-off</h3>
  <form action="/menu/{{Submit.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <div class="form-group">
        <label for="date">Date</label>
        <input type="date" class="form-control" name="date" value="{{formatDate date 'DD-MMM-YYYY'}}" required>
      </div>
      <div class="form-group">
        <div class="form-group">
          <label for="ClinicName">Clinic Name</label>
          <select type="text" class="form-control" id="clinic" name="clinic">
            <option value="{{Submit.clinic}}">{{Submit.clinic}}</option>
            {{#each medical}}
            <option value="{{clinic}}">{{clinic}}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="form-group">
        <div class="form-group">
          <label for="Task">Outstanding Tasks</label>
          <textarea class="form-control" name="task">{{Submit.task}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
  </form>
  </div>